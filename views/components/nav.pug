mixin nav-link(href, name)
  if name === title
    li.nav-item
      a.nav-link.active(href=href)= name
  else
    li.nav-item
      a.nav-link(href=href)= name

mixin nav-dropdown-link(href, name)
  li.dropdown-item
    a.nav-link(href=href)= name


